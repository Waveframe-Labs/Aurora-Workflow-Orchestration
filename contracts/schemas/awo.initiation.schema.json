{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://waveframelabs.org/schemas/awo.initiation.schema.json",
  "title": "AWO Initiation Record Schema",
  "type": "object",
  "description": "Schema for the AWO Initiation Record artifact (A-1). Defines the minimum machine-readable requirements for initiating a compliant AWO workflow.",
  "required": [
    "metadata",
    "objective",
    "scope_intent",
    "constraints",
    "producing_role"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "YAML-equivalent metadata extracted from the governing Markdown artifact.",
      "required": [
        "title",
        "version",
        "status",
        "created",
        "updated",
        "author",
        "maintainer",
        "license",
        "ai_assisted"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "author": {
          "type": "string"
        },
        "maintainer": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "ai_assisted": {
          "type": "string"
        },
        "ai_assistance_details": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "objective": {
      "type": "string",
      "description": "Declared research objective for the workflow."
    },
    "scope_intent": {
      "type": "string",
      "description": "High-level description of the intended scope prior to formal scoping."
    },
    "constraints": {
      "type": "array",
      "description": "Declared assumptions, constraints, or limitations at initiation time.",
      "items": {
        "type": "string"
      }
    },
    "producing_role": {
      "type": "string",
      "description": "Declared role responsible for producing the initiation record."
    }
  },
  "additionalProperties": false
}