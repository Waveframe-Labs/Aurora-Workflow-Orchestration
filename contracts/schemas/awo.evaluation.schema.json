{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://waveframelabs.org/schemas/awo.evaluation.schema.json",
  "title": "AWO Evaluation Criteria Schema",
  "type": "object",
  "description": "Schema for the AWO Evaluation Criteria artifact (A-3). Defines machine-readable requirements for acceptance, rejection, and quality thresholds.",
  "required": [
    "metadata",
    "acceptance_criteria",
    "rejection_criteria",
    "quality_thresholds",
    "producing_role"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "description": "YAML-equivalent metadata extracted from the governing Markdown artifact.",
      "required": [
        "title",
        "version",
        "status",
        "created",
        "updated",
        "author",
        "maintainer",
        "license",
        "ai_assisted"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "author": {
          "type": "string"
        },
        "maintainer": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "ai_assisted": {
          "type": "string"
        },
        "ai_assistance_details": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "acceptance_criteria": {
      "type": "array",
      "description": "Explicit conditions that must be satisfied for acceptance.",
      "items": {
        "type": "string"
      },
      "minItems": 1
    },
    "rejection_criteria": {
      "type": "array",
      "description": "Explicit conditions that mandate rejection.",
      "items": {
        "type": "string"
      }
    },
    "quality_thresholds": {
      "type": "object",
      "description": "Quantitative or qualitative thresholds used to judge sufficiency.",
      "additionalProperties": {
        "type": [
          "string",
          "number",
          "boolean"
        ]
      }
    },
    "producing_role": {
      "type": "string",
      "description": "Declared role responsible for producing the evaluation criteria artifact."
    },
    "applicability_notes": {
      "type": "string",
      "description": "Optional notes clarifying how criteria should be applied."
    }
  },
  "additionalProperties": false
}