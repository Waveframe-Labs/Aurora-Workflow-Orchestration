{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://waveframelabs.org/schemas/awo.review.schema.json",
  "title": "AWO Review Artifact",
  "description": "Records declared evaluation activity over upstream AWO artifacts. Enforces explicit disclosure of review method, depth, criteria, and observations without asserting authority or enforcement outcomes.",
  "type": "object",
  "required": [
    "artifact_type",
    "awo_version",
    "artifact_id",
    "phase",
    "created_at",
    "target_refs",
    "actors",
    "review_context",
    "findings",
    "review_outcome",
    "mutation_attestation"
  ],
  "properties": {
    "artifact_type": {
      "const": "awo.review"
    },

    "awo_version": {
      "type": "string"
    },

    "artifact_id": {
      "type": "string"
    },

    "phase": {
      "const": "review"
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "target_refs": {
      "type": "array",
      "description": "Artifacts being reviewed.",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["ref_type", "identifier", "relationship"],
        "properties": {
          "ref_type": {
            "type": "string",
            "enum": ["internal_id", "uri", "doi"]
          },
          "identifier": {
            "type": "string"
          },
          "relationship": {
            "type": "string",
            "enum": ["primary_subject", "context_reference"]
          }
        },
        "additionalProperties": false
      }
    },

    "actors": {
      "type": "array",
      "description": "Actors performing the review.",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["actor_id", "role", "ai_assisted"],
        "properties": {
          "actor_id": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["validator", "curator"]
          },
          "ai_assisted": {
            "type": "boolean",
            "description": "TRUE indicates AI-assisted or automated analysis was used."
          }
        },
        "additionalProperties": false
      }
    },

    "review_context": {
      "type": "object",
      "description": "Declares how the review was conducted.",
      "required": ["method", "depth", "criteria_ref"],
      "properties": {
        "method": {
          "type": "string",
          "enum": ["manual_inspection", "automated_scan", "hybrid", "peer_consensus"]
        },
        "depth": {
          "type": "string",
          "enum": ["structural_only", "sampling", "full_reproduction", "logic_check"]
        },
        "criteria_ref": {
          "type": "object",
          "description": "Reference to the criteria or standard used for evaluation.",
          "required": ["ref_type", "identifier"],
          "properties": {
            "ref_type": {
              "type": "string",
              "enum": ["internal_id", "uri", "doi"]
            },
            "identifier": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "findings": {
      "type": "array",
      "description": "Observations recorded during review.",
      "items": {
        "type": "object",
        "required": ["severity", "description"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["info", "minor", "blocking", "critical"]
          },
          "description": {
            "type": "string"
          },
          "location_ref": {
            "type": "string",
            "description": "Optional reference to affected location in the target artifact."
          }
        },
        "additionalProperties": false
      }
    },

    "review_outcome": {
      "type": "object",
      "description": "Declared assessment outcome without asserting authority.",
      "required": ["assessment"],
      "properties": {
        "assessment": {
          "type": "string",
          "enum": ["no_issues_noted", "issues_identified", "significant_concerns"]
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "mutation_attestation": {
      "type": "object",
      "description": "Structural attestation that no upstream artifacts were modified during review.",
      "required": ["mutation_performed"],
      "properties": {
        "mutation_performed": {
          "const": false
        }
      },
      "additionalProperties": false
    }
  },

  "additionalProperties": false
}
