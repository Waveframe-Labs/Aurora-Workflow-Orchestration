{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWO Review Report",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "artifact_type": {
      "type": "string",
      "description": "AWO artifact type identifier for this schema."
    },
    "run_id": {
      "type": "string",
      "description": "Stable identifier for the governed workflow run."
    },
    "awo_version": {
      "type": "string",
      "description": "Declared AWO method version used for this run (e.g. '2.0.0')."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when this artifact was created."
    },
    "created_by": {
      "type": "string",
      "description": "Identifier for the actor (human or agent) that created this artifact."
    },
    "reviewer_role": {
      "type": "string",
      "description": "Declared role of the reviewer within the workflow."
    },
    "review_scope": {
      "type": "string",
      "description": "Description of what was reviewed (artifacts, phases, etc.)."
    },
    "findings": {
      "type": "array",
      "description": "Structured list of review findings.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "severity"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "minor",
              "major",
              "critical"
            ]
          },
          "related_artifacts": {
            "type": "array",
            "description": "Optional references to artifacts implicated.",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "status": {
      "type": "string",
      "description": "Overall review disposition.",
      "enum": [
        "pending",
        "changes_requested",
        "approved_with_risks",
        "approved"
      ]
    }
  },
  "required": [
    "artifact_type",
    "run_id",
    "awo_version",
    "created_at",
    "created_by",
    "review_scope",
    "findings",
    "status"
  ]
}
