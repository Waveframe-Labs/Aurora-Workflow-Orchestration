{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://waveframelabs.org/schemas/awo.review.schema.json",
  "title": "AWO Review Artifact",
  "description": "Records declared evaluation activity over upstream AWO artifacts. Enforces explicit disclosure of review method, depth, criteria, and observations without asserting authority or enforcement outcomes.",
  "type": "object",
  "required": [
    "artifact_type",
    "awo_version",
    "artifact_id",
    "phase",
    "created_at",
    "initiation_ref",
    "specification_ref",
    "mutable",
    "review_state",
    "target_refs",
    "actors",
    "review_context",
    "review_outcome",
    "mutation_attestation"
  ],
  "properties": {
    "artifact_type": {
      "const": "awo.review"
    },

    "awo_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },

    "artifact_id": {
      "type": "string"
    },

    "phase": {
      "const": "review"
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "initiation_ref": {
      "type": "object",
      "required": ["ref_type", "identifier"],
      "properties": {
        "ref_type": {
          "type": "string",
          "enum": ["internal_id", "uri", "doi"]
        },
        "identifier": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "specification_ref": {
      "type": "object",
      "required": ["ref_type", "identifier"],
      "properties": {
        "ref_type": {
          "type": "string",
          "enum": ["internal_id", "uri", "doi"]
        },
        "identifier": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "mutable": {
      "const": false,
      "description": "Review artifacts are observational and immutable."
    },

    "review_state": {
      "type": "string",
      "enum": ["in_progress", "completed", "halted"]
    },

    "target_refs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["ref_type", "identifier", "relationship"],
        "properties": {
          "ref_type": {
            "type": "string",
            "enum": ["internal_id", "uri", "doi"]
          },
          "identifier": {
            "type": "string"
          },
          "relationship": {
            "type": "string",
            "enum": ["primary_subject", "context_reference"]
          }
        },
        "additionalProperties": false
      }
    },

    "actors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["actor_id", "role", "ai_assisted"],
        "properties": {
          "actor_id": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["reviewer"]
          },
          "ai_assisted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },

    "review_context": {
      "type": "object",
      "required": ["method", "depth", "criteria_ref"],
      "properties": {
        "method": {
          "type": "string",
          "enum": ["manual_inspection", "automated_scan", "hybrid", "peer_consensus"]
        },
        "depth": {
          "type": "string",
          "enum": ["structural_only", "sampling", "full_reproduction", "logic_check"]
        },
        "criteria_ref": {
          "type": "object",
          "required": ["ref_type", "identifier"],
          "properties": {
            "ref_type": {
              "type": "string",
              "enum": ["internal_id", "uri", "doi"]
            },
            "identifier": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["severity", "description"],
        "properties": {
          "severity": {
            "type": "string",
            "enum": ["info", "minor", "blocking", "critical"]
          },
          "description": { "type": "string" },
          "location_ref": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "review_outcome": {
      "type": "object",
      "required": ["assessment"],
      "properties": {
        "assessment": {
          "type": "string",
          "enum": ["no_issues_noted", "issues_identified", "significant_concerns"]
        },
        "notes": { "type": "string" }
      },
      "additionalProperties": false
    },

    "mutation_attestation": {
      "type": "object",
      "required": ["mutation_performed"],
      "properties": {
        "mutation_performed": {
          "const": false
        }
      },
      "additionalProperties": false
    }
  },

  "allOf": [
    {
      "if": {
        "properties": {
          "review_outcome": {
            "properties": {
              "assessment": {
                "enum": ["issues_identified", "significant_concerns"]
              }
            }
          }
        }
      },
      "then": {
        "required": ["findings"],
        "properties": {
          "findings": {
            "minItems": 1
          }
        }
      }
    }
  ],

  "additionalProperties": false
}
