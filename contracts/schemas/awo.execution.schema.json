{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://waveframelabs.org/schemas/awo.execution.schema.json",
  "title": "AWO Execution Artifact",
  "description": "Records execution activity performed under a declared AWO Specification. Enforces structural traceability only; makes no semantic or normative judgments.",
  "type": "object",
  "required": [
    "artifact_type",
    "awo_version",
    "artifact_id",
    "phase",
    "created_at",
    "initiation_ref",
    "specification_ref",
    "mutable",
    "execution_state",
    "actors",
    "execution_log",
    "deviations"
  ],
  "properties": {
    "artifact_type": {
      "const": "awo.execution"
    },

    "awo_version": {
      "type": "string",
      "description": "AWO version this execution artifact conforms to.",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },

    "artifact_id": {
      "type": "string",
      "description": "Globally unique identifier for this execution artifact."
    },

    "phase": {
      "const": "execution"
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "initiation_ref": {
      "type": "object",
      "description": "Reference to the initiating artifact for this workflow.",
      "required": ["ref_type", "identifier"],
      "properties": {
        "ref_type": {
          "type": "string",
          "enum": ["internal_id", "uri", "doi"]
        },
        "identifier": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "specification_ref": {
      "type": "object",
      "description": "Reference to the governing Specification Artifact.",
      "required": ["ref_type", "identifier"],
      "properties": {
        "ref_type": {
          "type": "string",
          "enum": ["internal_id", "uri", "doi"]
        },
        "identifier": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "mutable": {
      "const": false,
      "description": "Execution artifacts are immutable once created."
    },

    "execution_state": {
      "type": "string",
      "enum": ["in_progress", "completed", "halted"],
      "description": "Declared state of execution at time of artifact creation."
    },

    "actors": {
      "type": "array",
      "description": "Actors participating in execution.",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["actor_id", "role", "ai_assisted"],
        "properties": {
          "actor_id": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["contributor"]
          },
          "ai_assisted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },

    "execution_log": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["step_id", "description"],
        "properties": {
          "step_id": { "type": "string" },
          "description": { "type": "string" },
          "tool_used": { "type": "string" },
          "output_ref": {
            "type": "object",
            "required": ["ref_type", "identifier"],
            "properties": {
              "ref_type": {
                "type": "string",
                "enum": ["internal_id", "uri", "doi"]
              },
              "identifier": { "type": "string" }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },

    "deviations": {
      "type": "object",
      "required": ["deviations_occurred", "scope_conformance_declared"],
      "properties": {
        "deviations_occurred": {
          "type": "boolean"
        },
        "scope_conformance_declared": {
          "type": "boolean",
          "description": "Declarative statement regarding whether execution exceeded the declared specification scope."
        },
        "deviation_details": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["description"],
            "properties": {
              "description": { "type": "string" },
              "related_spec_section": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "deviations_occurred": { "const": true }
            }
          },
          "then": {
            "required": ["deviation_details"],
            "properties": {
              "deviation_details": {
                "minItems": 1
              }
            }
          }
        }
      ],
      "additionalProperties": false
    }
  },

  "additionalProperties": false
}
