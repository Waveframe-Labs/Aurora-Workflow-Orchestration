{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://waveframelabs.org/schemas/awo.release.schema.json",
  "title": "AWO Release Artifact",
  "description": "The terminal artifact of an AWO workflow cycle. Acts as a frozen manifest that bundles upstream artifacts for distribution or archival without asserting approval, legitimacy, or authority.",
  "type": "object",
  "required": [
    "artifact_type",
    "awo_version",
    "artifact_id",
    "phase",
    "created_at",
    "initiation_ref",
    "specification_ref",
    "mutable",
    "release_state",
    "actors",
    "release_meta",
    "manifest",
    "integrity_attestation"
  ],
  "properties": {
    "artifact_type": {
      "const": "awo.release"
    },

    "awo_version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
    },

    "artifact_id": {
      "type": "string"
    },

    "phase": {
      "const": "release"
    },

    "created_at": {
      "type": "string",
      "format": "date-time"
    },

    "initiation_ref": {
      "type": "object",
      "required": ["ref_type", "identifier"],
      "properties": {
        "ref_type": {
          "type": "string",
          "enum": ["internal_id", "uri", "doi"]
        },
        "identifier": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "specification_ref": {
      "type": "object",
      "required": ["ref_type", "identifier"],
      "properties": {
        "ref_type": {
          "type": "string",
          "enum": ["internal_id", "uri", "doi"]
        },
        "identifier": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "mutable": {
      "const": false,
      "description": "Release artifacts are immutable once created."
    },

    "release_state": {
      "type": "string",
      "enum": ["prepared", "frozen", "withdrawn"]
    },

    "actors": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["actor_id", "role", "ai_assisted"],
        "properties": {
          "actor_id": { "type": "string" },
          "role": {
            "type": "string",
            "enum": ["auditor"]
          },
          "ai_assisted": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      }
    },

    "release_meta": {
      "type": "object",
      "required": ["version_tag", "release_intent", "target_audience"],
      "properties": {
        "version_tag": {
          "type": "string",
          "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-[0-9A-Za-z.-]+)?(?:\\+[0-9A-Za-z.-]+)?$"
        },
        "release_intent": {
          "type": "string",
          "enum": ["draft_preview", "peer_context", "production_context", "archival", "deprecation"]
        },
        "target_audience": {
          "type": "string",
          "enum": ["internal", "ecosystem", "public"]
        },
        "license_declaration": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },

    "manifest": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["ref_type", "identifier", "artifact_type"],
        "properties": {
          "ref_type": {
            "type": "string",
            "enum": ["internal_id", "uri", "doi"]
          },
          "identifier": {
            "type": "string"
          },
          "artifact_type": {
            "type": "string",
            "enum": [
              "awo.initiation",
              "awo.specification",
              "awo.execution",
              "awo.review"
            ]
          },
          "inclusion_reason": {
            "type": "string",
            "enum": ["core_component", "supporting_evidence", "lineage_trace"]
          }
        },
        "additionalProperties": false
      }
    },

    "integrity_attestation": {
      "type": "object",
      "required": ["bundle_complete", "upstream_modified"],
      "properties": {
        "bundle_complete": {
          "type": "boolean"
        },
        "upstream_modified": {
          "const": false
        }
      },
      "additionalProperties": false
    },

    "terminal_attestation": {
      "type": "object",
      "required": ["workflow_concluded"],
      "properties": {
        "workflow_concluded": {
          "const": true
        }
      },
      "additionalProperties": false
    }
  },

  "allOf": [
    {
      "if": {
        "properties": {
          "release_state": { "const": "frozen" }
        }
      },
      "then": {
        "required": ["terminal_attestation"]
      }
    }
  ],

  "additionalProperties": false
}
