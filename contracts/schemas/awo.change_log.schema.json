{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWO Change Log",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "artifact_type": {
      "type": "string",
      "description": "AWO artifact type identifier for this schema."
    },
    "run_id": {
      "type": "string",
      "description": "Stable identifier for the governed workflow run."
    },
    "awo_version": {
      "type": "string",
      "description": "Declared AWO method version used for this run (e.g. '2.0.0')."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when this artifact was created."
    },
    "created_by": {
      "type": "string",
      "description": "Identifier for the actor (human or agent) that created this artifact."
    },
    "entries": {
      "type": "array",
      "description": "Chronological list of changes applied during the workflow run.",
      "items": {
        "type": "object",
        "required": [
          "timestamp",
          "changed_by",
          "description"
        ],
        "additionalProperties": false,
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "changed_by": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "related_artifacts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "artifact_type",
    "run_id",
    "awo_version",
    "created_at",
    "created_by",
    "entries"
  ]
}
