{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://waveframelabs.org/contracts/schemas/awo.dependency.schema.json",
  "title": "AWO Dependency Declaration Schema",
  "description": "Optional schema for declaring explicit dependencies between AWO-governed artifacts, contracts, schemas, and specifications. Enables machine-readable dependency graphs and validation.",
  "type": "object",
  "required": [
    "metadata",
    "dependency_declaration"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "title",
        "version",
        "status",
        "created",
        "updated",
        "author",
        "maintainer",
        "license",
        "ai_assisted"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Draft",
            "Active",
            "Archived",
            "Superseded"
          ]
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "author": {
          "type": "string"
        },
        "maintainer": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "ai_assisted": {
          "type": "string",
          "enum": [
            "true",
            "false",
            "partial"
          ]
        },
        "ai_assistance_details": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "dependency_declaration": {
      "type": "object",
      "required": [
        "subject",
        "dependencies"
      ],
      "properties": {
        "subject": {
          "type": "string",
          "description": "The artifact, contract, or specification declaring dependencies."
        },
        "dependencies": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "dependency_id",
              "dependency_type",
              "reference"
            ],
            "properties": {
              "dependency_id": {
                "type": "string",
                "description": "Unique identifier for the dependency."
              },
              "dependency_type": {
                "type": "string",
                "enum": [
                  "Governance",
                  "Contract",
                  "Schema",
                  "Artifact",
                  "External"
                ],
                "description": "Type classification of the dependency."
              },
              "reference": {
                "type": "string",
                "description": "Canonical reference (path, URL, DOI, or identifier) to the dependency."
              },
              "required": {
                "type": "boolean",
                "description": "Whether the dependency is mandatory for validity.",
                "default": true
              },
              "notes": {
                "type": "string",
                "description": "Optional explanatory notes about the dependency."
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}