{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWO Issue Register",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "artifact_type": {
      "type": "string",
      "description": "AWO artifact type identifier for this schema."
    },
    "run_id": {
      "type": "string",
      "description": "Stable identifier for the governed workflow run."
    },
    "awo_version": {
      "type": "string",
      "description": "Declared AWO method version used for this run (e.g. '2.0.0')."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when this artifact was created."
    },
    "created_by": {
      "type": "string",
      "description": "Identifier for the actor (human or agent) that created this artifact."
    },
    "issues": {
      "type": "array",
      "description": "List of open or resolved issues tracked for the workflow.",
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "status",
          "severity",
          "created_at"
        ],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "open",
              "in_progress",
              "resolved",
              "closed"
            ]
          },
          "severity": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high",
              "critical"
            ]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "owner": {
            "type": "string",
            "description": "Actor responsible for this issue."
          },
          "related_artifacts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": [
    "artifact_type",
    "run_id",
    "awo_version",
    "created_at",
    "created_by",
    "issues"
  ]
}
