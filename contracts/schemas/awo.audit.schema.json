{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AWO Audit Report",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "artifact_type": {
      "type": "string",
      "description": "AWO artifact type identifier for this schema."
    },
    "run_id": {
      "type": "string",
      "description": "Stable identifier for the governed workflow run."
    },
    "awo_version": {
      "type": "string",
      "description": "Declared AWO method version used for this run (e.g. '2.0.0')."
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when this artifact was created."
    },
    "created_by": {
      "type": "string",
      "description": "Identifier for the actor (human or agent) that created this artifact."
    },
    "auditor_role": {
      "type": "string",
      "description": "Declared role of the auditor."
    },
    "audit_scope": {
      "type": "string",
      "description": "Description of workflow elements included in this audit."
    },
    "invariant_check_results": {
      "type": "array",
      "description": "Structured results of invariant checks.",
      "items": {
        "type": "object",
        "required": [
          "invariant_id",
          "status"
        ],
        "additionalProperties": false,
        "properties": {
          "invariant_id": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "pass",
              "fail",
              "not_applicable"
            ]
          },
          "notes": {
            "type": "string"
          }
        }
      }
    },
    "overall_status": {
      "type": "string",
      "description": "Aggregate audit status.",
      "enum": [
        "pass",
        "fail",
        "conditional"
      ]
    },
    "recommendations": {
      "type": "array",
      "description": "Follow-up recommendations or required remediations.",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "artifact_type",
    "run_id",
    "awo_version",
    "created_at",
    "created_by",
    "auditor_role",
    "audit_scope",
    "invariant_check_results",
    "overall_status"
  ]
}
