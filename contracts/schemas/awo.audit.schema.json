{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://waveframelabs.org/contracts/schemas/awo.audit.schema.json",
  "title": "AWO Audit Record Schema",
  "description": "Schema for formal audit records within Aurora Workflow Orchestration (AWO). Captures audit scope, findings, determinations, and independence declarations.",
  "type": "object",
  "required": [
    "metadata",
    "audit"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "title",
        "version",
        "status",
        "created",
        "updated",
        "author",
        "maintainer",
        "license",
        "ai_assisted"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "version": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": [
            "Draft",
            "Active",
            "Archived",
            "Superseded"
          ]
        },
        "created": {
          "type": "string",
          "format": "date"
        },
        "updated": {
          "type": "string",
          "format": "date"
        },
        "author": {
          "type": "string"
        },
        "maintainer": {
          "type": "string"
        },
        "license": {
          "type": "string"
        },
        "ai_assisted": {
          "type": "string",
          "enum": [
            "true",
            "false",
            "partial"
          ]
        },
        "ai_assistance_details": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "audit": {
      "type": "object",
      "required": [
        "audit_id",
        "audit_type",
        "auditing_role",
        "audited_scope",
        "independence_declared",
        "findings",
        "audit_date",
        "determination"
      ],
      "properties": {
        "audit_id": {
          "type": "string",
          "description": "Unique identifier for the audit event."
        },
        "audit_type": {
          "type": "string",
          "enum": [
            "Process",
            "Artifact",
            "Compliance",
            "Governance"
          ],
          "description": "Type of audit conducted."
        },
        "auditing_role": {
          "type": "string",
          "description": "Role exercising audit authority."
        },
        "audited_scope": {
          "type": "string",
          "description": "Reference to the workflow, artifact set, or approval being audited."
        },
        "independence_declared": {
          "type": "boolean",
          "description": "Affirms auditor independence from the audited work."
        },
        "independence_details": {
          "type": "string",
          "description": "Optional details describing independence guarantees or constraints."
        },
        "findings": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "finding_id",
              "description",
              "severity"
            ],
            "properties": {
              "finding_id": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "severity": {
                "type": "string",
                "enum": [
                  "low",
                  "medium",
                  "high",
                  "critical"
                ]
              },
              "evidence_reference": {
                "type": "string",
                "description": "Reference to evidence supporting the finding."
              }
            },
            "additionalProperties": false
          }
        },
        "determination": {
          "type": "string",
          "enum": [
            "Pass",
            "Conditional Pass",
            "Fail"
          ],
          "description": "Overall audit determination."
        },
        "required_remediation": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Required remediation actions if audit did not pass cleanly."
        },
        "audit_date": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string",
          "description": "Optional contextual notes from the auditor."
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}