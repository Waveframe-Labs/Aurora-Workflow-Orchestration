{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.waveframe.org/awo/drift_report.schema.json",
  "title": "AWO Drift Report",
  "type": "object",
  "required": [
    "run_id",
    "baseline_id",
    "eval_suite_id",
    "item_count",
    "metrics",
    "decision",
    "created_at"
  ],
  "properties": {
    "run_id": { "type": "string" },
    "baseline_id": { "type": "string", "description": "Reference fingerprint or prior run ID" },
    "eval_suite_id": { "type": "string", "description": "Identifier of the golden set" },
    "item_count": { "type": "integer", "minimum": 1 },
    "metrics": {
      "type": "object",
      "description": "Key metrics for the eval suite",
      "properties": {
        "accuracy": { "type": "number", "minimum": 0, "maximum": 1 },
        "exact_match": { "type": "number", "minimum": 0, "maximum": 1 },
        "f1": { "type": "number", "minimum": 0, "maximum": 1 },
        "consistency_score": { "type": "number", "minimum": 0, "maximum": 1 },
        "logits_divergence": { "type": "number", "description": "JSD/KL if available" }
      },
      "additionalProperties": { "type": "number" }
    },
    "deltas": {
      "type": "object",
      "description": "Metric deltas vs baseline (current - baseline)",
      "additionalProperties": { "type": "number" }
    },
    "thresholds": {
      "type": "object",
      "description": "Policy thresholds used for the decision",
      "additionalProperties": { "type": ["number","string","boolean"] }
    },
    "decision": { "type": "string", "enum": ["pass","fail"] },
    "notes": { "type": "string" },
    "created_at": { "type": "string", "format": "date-time" },
    "model_fingerprint": { "$ref": "model_fingerprint.schema.json" }
  },
  "additionalProperties": false
}
