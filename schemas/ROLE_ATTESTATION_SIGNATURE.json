{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Role Attestation Signature (AWO reference)",
  "type": "object",
  "properties": {
    "run_id": {"type": "string"},
    "artifact_path": {"type": "string"},
    "origin_role": {"type": "string"},
    "verified_by": {"type": "string"},
    "verdict": {"type": "string", "enum": ["approved", "rejected", "needs-revision"]},
    "sha256": {"type": "string"},
    "timestamp": {"type": "string", "format": "date-time"},
    "adr_refs": {"type": "array", "items": {"type": "string"}}
  },
  "required": ["run_id","artifact_path","origin_role","verified_by","verdict","sha256","timestamp"]
}
