{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://waveframe-labs.org/schemas/workflow_schema.json",
  "title": "AWO Workflow Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "steps"],
  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "version": { "type": "string" },
    "schema_version": { "type": "string", "default": "1.1.1" },

    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name"],
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "type": {
            "type": "string",
            "enum": ["prompt", "tool", "script", "check"],
            "default": "prompt"
          },
          "prompt": { "type": "string", "minLength": 1 },
          "system": { "type": "string" },
          "model": {
            "description": "Single model OR a list for fan-out/consensus runs.",
            "oneOf": [
              { "type": "string", "minLength": 1 },
              {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string", "minLength": 1 },
                "uniqueItems": true
              }
            ]
          },
          "params": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "temperature": { "type": "number", "minimum": 0, "maximum": 2 },
              "top_p": { "type": "number", "minimum": 0, "maximum": 1 },
              "max_tokens": { "type": "integer", "minimum": 1 }
            }
          },
          "depends_on": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 },
            "uniqueItems": true
          },
          "inputs": { "type": "object" },
          "outputs": { "type": "object" },
          "save_as": { "type": "string", "minLength": 1 }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "prompt" } }, "required": ["type"] },
            "then": { "required": ["prompt"] }
          }
        ]
      }
    }
  }
}
