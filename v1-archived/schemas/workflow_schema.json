{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://waveframe-labs.org/schemas/workflow_schema.json",
  "title": "AWO Workflow Schema (Dual-Mode: Prompt + Operator)",
  "type": "object",
  "additionalProperties": false,

  "required": ["name", "steps"],

  "properties": {
    "name": { "type": "string", "minLength": 1 },
    "description": { "type": "string" },
    "version": { "type": "string" },
    "schema_version": { "type": "string", "default": "1.3.0" },

    "steps": {
      "type": "array",
      "minItems": 1,

      "items": {
        "oneOf": [
          { "$ref": "#/definitions/prompt_step" },
          { "$ref": "#/definitions/operator_step" }
        ]
      }
    }
  },

  "definitions": {

    /* ----------------------------------------------------
       1. PROMPT / LLM STYLE STEPS (legacy AWO)
       ---------------------------------------------------- */
    "prompt_step": {
      "type": "object",
      "additionalProperties": false,

      "required": ["name"],

      "properties": {
        "name":     { "type": "string", "minLength": 1 },

        "type": {
          "type": "string",
          "enum": ["prompt", "tool", "script", "check"],
          "default": "prompt"
        },

        "prompt": { "type": "string", "minLength": 1 },
        "system": { "type": "string" },

        "model": {
          "description": "Single model OR list for fan-out / consensus runs.",
          "oneOf": [
            { "type": "string", "minLength": 1 },
            {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 },
              "uniqueItems": true
            }
          ]
        },

        "params": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "temperature": { "type": "number", "minimum": 0, "maximum": 2 },
            "top_p":       { "type": "number", "minimum": 0, "maximum": 1 },
            "max_tokens":  { "type": "integer", "minimum": 1 }
          }
        },

        "depends_on": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },

        "inputs":  { "type": "object" },
        "outputs": { "type": "object" },
        "save_as": { "type": "string", "minLength": 1 }
      },

      "allOf": [
        {
          "if": { "properties": { "type": { "const": "prompt" } }, "required": ["type"] },
          "then": { "required": ["prompt"] }
        }
      ]
    },

    /* ----------------------------------------------------
       2. OPERATOR STYLE STEPS (CRI-style AWO v1.3+)
       ---------------------------------------------------- */
    "operator_step": {
      "type": "object",

      "additionalProperties": false,

      "required": ["op"],

      "properties": {
        "id": { "type": "string", "minLength": 1 },

        "op": { "type": "string", "minLength": 1 },

        "args": {
          "type": "object",
          "description": "Operator arguments (free-form unless specialized).",
          "additionalProperties": true
        },

        "depends_on": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "uniqueItems": true
        },

        "save_as": { "type": "string", "minLength": 1 }
      }
    }
  }
}
